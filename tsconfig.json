{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules",
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/testUtils/**",
    "dist/**"
  ]
}
